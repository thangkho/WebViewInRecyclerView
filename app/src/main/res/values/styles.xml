<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:actionMenuTextAppearance">@style/ActionMenuText</item>
    </style>

    <style name="ActionMenuText">
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--FONT SIZE-->
    <style name="StyleXXLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_xxlarge</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:padding">@dimen/padding_content</item>
    </style>

    <style name="StyleXLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_xlarge</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:padding">@dimen/padding_content</item>
    </style>

    <style name="StyleLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:padding">@dimen/padding_content</item>
    </style>

    <style name="StyleNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:padding">@dimen/padding_content</item>
    </style>

    <style name="StyleMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:padding">@dimen/padding_content</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="StyleMediumBold" parent="StyleMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:padding">@dimen/padding_content</item>
    </style>

    <style name="StyleTiny">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_tiny</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:padding">@dimen/padding_content</item>
    </style>

    <!--AVATAR-->
    <style name="AvatarSmall">
        <item name="android:layout_width">@dimen/avatar_small</item>
        <item name="android:layout_height">@dimen/avatar_small</item>
    </style>

    <style name="AvatarTiny">
        <item name="android:layout_width">@dimen/avatar_tiny</item>
        <item name="android:layout_height">@dimen/avatar_tiny</item>
    </style>

    <style name="AvatarMedium">
        <item name="android:layout_width">@dimen/avatar_medium</item>
        <item name="android:layout_height">@dimen/avatar_medium</item>
    </style>

    <style name="AvatarLarge">
        <item name="android:layout_width">@dimen/avatar_large</item>
        <item name="android:layout_height">@dimen/avatar_large</item>
    </style>

    <style name="AvatarXLarge">
        <item name="android:layout_width">@dimen/avatar_xlarge</item>
        <item name="android:layout_height">@dimen/avatar_xlarge</item>
    </style>

    <style name="AvatarXXLarge">
        <item name="android:layout_width">@dimen/avatar_xxlarge</item>
        <item name="android:layout_height">@dimen/avatar_xxlarge</item>
    </style>

    <!--ICON-->
    <style name="IconTiny">
        <item name="android:layout_width">@dimen/icon_tiny</item>
        <item name="android:layout_height">@dimen/icon_tiny</item>
    </style>

    <style name="IconSmall">
        <item name="android:layout_width">@dimen/icon_small</item>
        <item name="android:layout_height">@dimen/icon_small</item>
    </style>

    <style name="IconSmall2x">
        <item name="android:layout_width">@dimen/icon_small_2x</item>
        <item name="android:layout_height">@dimen/icon_small_2x</item>
    </style>

    <style name="IconMedium">
        <item name="android:layout_width">@dimen/icon_medium</item>
        <item name="android:layout_height">@dimen/icon_medium</item>
    </style>

    <style name="IconLarge">
        <item name="android:layout_width">@dimen/icon_large</item>
        <item name="android:layout_height">@dimen/icon_large</item>
    </style>

    <style name="IconXLarge">
        <item name="android:layout_width">@dimen/icon_xlarge</item>
        <item name="android:layout_height">@dimen/icon_xlarge</item>
    </style>

    <style name="IconXXLarge">
        <item name="android:layout_width">@dimen/icon_xxlarge</item>
        <item name="android:layout_height">@dimen/icon_xxlarge</item>
    </style>

    <!-- Padding style -->
    <style name="paddingLayout">
        <item name="android:padding">@dimen/padding_layout</item>
    </style>

    <style name="marginLayout">
        <item name="android:layout_margin">@dimen/padding_layout</item>
    </style>

    <style name="marginItem">
        <item name="android:layout_marginTop">@dimen/padding_content</item>
        <item name="android:layout_marginBottom">@dimen/padding_content</item>
    </style>

    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line</item>
        <item name="android:background">@color/colorLineGray</item>
    </style>

    <style name="line_vertical">
        <item name="android:layout_width">@dimen/size_border_dashboard</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorLineGray</item>
    </style>

    <style name="line_vertical_day">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorRed</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="llTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/padding_content</item>
        <item name="android:paddingBottom">@dimen/padding_content</item>
    </style>

    <style name="llFontTab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorLightBlue</item>
        <item name="android:textSize">@dimen/font_size_xxlarge</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="llFontSmallTab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bg_gray_booking">
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_gray_booking</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="llPadingBooking">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AppTheme.Dialog.Custom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>
    <style name="DialogFullWidth" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
